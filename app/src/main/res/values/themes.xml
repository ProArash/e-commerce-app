<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:navigationBarColor">@color/green</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="GreenRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rounded_green</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LighterGreenRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rounded_lighter_green</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="WhiteRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CircularImageView" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_circle_white</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/m_margin</item>
        <item name="android:layout_margin">@dimen/m_margin</item>
        <item name="android:tint">@color/dark_grey</item>
    </style>
    
    <style name="GreyRoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_bordered</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/light_blue_grey</item>
        <item name="android:padding">@dimen/l_margin</item>
    </style>
    <style name="WhiteRoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/light_blue_grey</item>
        <item name="android:padding">@dimen/l_margin</item>
    </style>

    <style name="Theme.ECommerceApp" parent="Base.Theme.ECommerceApp" />
</resources>